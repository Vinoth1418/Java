import java.util.*;

public class Main {
    public static void main(String[] args) {
      int a[]={4,5,6,7,3};
      int largest=a[0];
      int smallest =a[0];
      for(int i=0;i<a.length;i++){
        smallest =a[i];
        if(a[i]>largest){
          largest=a[i];
        }}
        System. out. println("Largest number in the array is:"+largest);
        System. out. println("Smallest number in tha array is:"+smallest);
      
  }
}
