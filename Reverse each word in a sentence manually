public class Main
{
	public static String rev(String a){
	    
	    String c="";
	    for(int i=a.length()-1;i>=0;i--){
	        c=c+a.charAt(i);
	    }
	
	return c;
	}
	public static void main(String args[]){
	    String b="no lemon no melon";
	    b=b.toLowerCase();
	    String res=rev(b);
	        System.out.println(res);
	    }
	  
	}
